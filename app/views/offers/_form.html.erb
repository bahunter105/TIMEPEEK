<%= simple_form_for (@offer) do |f| %>
  <%= f.error_notification %>

  <%= f.input :name, placeholder: 'What is your time travel name?'%>

  <%= f.input :date%>

  <%= f.input :category, collection: [['Music'], ['Sports'], ['Religious'], ['Conspiracies'], ['Famous battles'], ['Famous death']]%>

  <%= f.input :max_travellers, input_html: { max: 10 }%>

  <%= f.input :description, placeholder: 'What is a traveler going to experience?'%>

  <%= f.input :price, placeholder: 'â‚¬'%>

  <%= f.input :image, as: :file%>

  <%= f.button :submit, class: "btn-primary" %>
  <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
<% end %>
