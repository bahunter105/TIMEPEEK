    <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder= "Search for your next adventure!",
 />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
<% end %>


