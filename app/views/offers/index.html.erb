<header>
<h1 class="text-center title-index-padding" id="title-index">What's your destination?</h1>
</header>


<%= form_tag offers_path, method: :get do %>
  <div class= 'd-inline-flex justify-content-between'>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Search for your next adventure!",
      class: "align-self-center"
    %>
    <%= submit_tag "Search", class: "btn btn-flat align-self-center" %>
  </div>
<% end %>

